<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                              http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>de.htwsaar</groupId>
	<artifactId>mc-config-tool-metapom</artifactId>
	<packaging>pom</packaging>
	<version>2.0-SNAPSHOT</version>

	<modules>
		<module>mc-config-tool</module>
		<module>mc-config-tool-annotation-processor</module>
		<module>mc-config-tool-collector</module>
		<module>mc-config-test</module>
	</modules>
	
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!-- Sonar -->
		<sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>
		<sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
		<sonar.jacoco.reportPath>${project.basedir}/../target/jacoco.exec</sonar.jacoco.reportPath>
		<sonar.language>java</sonar.language>
	</properties>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.sonarsource.scanner.maven</groupId>
					<artifactId>sonar-maven-plugin</artifactId>
					<version>3.0.2</version>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>0.7.6.201602180812</version>
				<!--
				<configuration>
					<destFile>${sonar.jacoco.reportPath}</destFile>
					<append>true</append>
				</configuration>
				<executions>
					<execution>
						<id>agent</id>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
					</execution>
				</executions>
				-->
				<executions></executions>
			</plugin>
		</plugins>
	</build>
	<distributionManagement>
		<repository>
			<id>newton</id>
			<name>newton-releases</name>
			<url>https://newton.htwsaar.de/artifactory/libs-release-local</url>
		</repository>
		<snapshotRepository>
			<id>newton</id>
			<name>newton-snapshots</name>
			<url>https://newton.htwsaar.de/artifactory/libs-snapshot-local</url>
		</snapshotRepository>
	</distributionManagement>
</project>
